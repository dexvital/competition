{% extends 'main.html.twig' %}

{% block title %}Groups!{% endblock %}

{% block content %}
    <br />
    <div class="row title_row">
        <div class="col-sm-2 col-md-2">
            <a href="{{ path('group_edit') }}" class="btn btn-primary" type="button">
                {% trans %}Add{% endtrans %}
            </a>
        </div>
        <div class="col-sm-10 col-md-10">
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 col-md-12">
            <table class="table table-striped">
                <tbody>
                {% for group in g_paginated %}

                    <tr>
                        <td>{{ group.id }}</td>
                        <td>{{ group.name }}</td>
                        <td>{{ group.competition.name }}</td>
                        <td><a role="button" class="btn btn-primary"
                               href="{{ path('group_edit',{'groupId':group.id, 'page':app.request.query.get("page")}) }}">{% trans %}Edit{% endtrans %}</a>
                            <a role="button" class="btn btn-primary"
                               href="{{ path('group_team_add',{'groupId':group.id}) }}">{% trans %}Add/Delete Team{% endtrans %}</a>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2 col-md-2"></div>
        <div class="col-sm-8 col-md-8">
            {{ knp_pagination_render(g_paginated) }}
        </div>
        <div class="col-sm-2 col-md-2"></div>
    </div>
{% endblock %}
