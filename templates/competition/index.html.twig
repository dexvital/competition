{% extends 'main.html.twig' %}

{% block title %}Competitions!{% endblock %}

{% block content %}
    <br />
    <div class="row title_row">
        <div class="col-sm-2 col-md-2">
            <a href="{{ path('competition_edit') }}" class="btn btn-primary" type="button">
                {% trans %}Add{% endtrans %}
            </a>
        </div>
        <div class="col-sm-10 col-md-10">
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 col-md-12">
            <table class="table table-striped">
                <tbody>
                {% for comp in c_paginated %}

                    <tr>
                        <td>{{ comp.id }}</td>
                        <td>{{ comp.name }}</td>
                        <td><a type="button" class="btn btn-primary"
                               href="{{ path('competition_edit',{'competitionId':comp.id, 'page':app.request.query.get("page")}) }}">{% trans %}Edit{% endtrans %}</a>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2 col-md-2"></div>
        <div class="col-sm-8 col-md-8">
            {{ knp_pagination_render(c_paginated) }}
        </div>
        <div class="col-sm-2 col-md-2"></div>
    </div>
{% endblock %}
