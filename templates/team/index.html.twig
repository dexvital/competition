{% extends 'main.html.twig' %}

{% block title %}Teams!{% endblock %}

{% block content %}
    <br />
    <div class="row title_row">
        <div class="col-sm-2 col-md-2">
            <a href="{{ path('team_edit') }}" class="btn btn-primary" type="button">
                Add
            </a>
        </div>
        <div class="col-sm-10 col-md-10">
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 col-md-12">
            <table class="table table-striped">
                <tbody>
                {% for team in t_paginated %}

                    <tr>
                        <td>{{ team.id }}</td>
                        <td>{{ team.name }}</td>
                        <td><a role="button" class="btn btn-primary"
                               href="{{ path('team_edit',{'teamId':team.id, 'page':app.request.query.get("page")}) }}">Edit</a>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2 col-md-2"></div>
        <div class="col-sm-8 col-md-8">
            {{ knp_pagination_render(t_paginated) }}
        </div>
        <div class="col-sm-2 col-md-2"></div>
    </div>
{% endblock %}
